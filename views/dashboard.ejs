<section>
  <h2>Your Files</h2>

  <form action="/files/create" method="post" class="create-form">
    <label>Filename <input name="filename" placeholder="example.txt" /></label>
    <label>Content <input name="content" placeholder="Type initial content..." /></label>
    <button type="submit">Create File</button>
  </form>

  <ul class="file-list">
    <% if (files.length === 0) { %>
      <li>No files yet.</li>
    <% } %>
    <% files.forEach(function(f) { %>
      <li>
        <strong><%= f %></strong>
        <a href="/files/read/<%= encodeURIComponent(f) %>">Read</a> |
        <a href="/files/metadata/<%= encodeURIComponent(f) %>">Metadata</a> |
        <a href="/files/modify/<%= encodeURIComponent(f) %>">Modify</a>
        <form action="/files/delete/<%= encodeURIComponent(f) %>" method="post" style="display:inline;">
          <button type="submit" onclick="return confirm('Delete file <%= f %>?')">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</section>
