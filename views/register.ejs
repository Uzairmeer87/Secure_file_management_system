<section>
  <h2>Register</h2>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>
  <form action="/register" method="post">
    <label>Username
      <input name="username" required />
    </label>
    <label>Password
      <input name="password" type="password" required />
    </label>
    <p>Password must be at least 8 characters and include uppercase, lowercase, digit and special character.</p>
    <button type="submit">Register</button>
  </form>
</section>
