<section>
  <h2>Login</h2>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>
  <form action="/login" method="post">
    <label>Username
      <input name="username" required />
    </label>
    <label>Password
      <input name="password" type="password" required />
    </label>
    <button type="submit">Login</button>
  </form>
</section>
