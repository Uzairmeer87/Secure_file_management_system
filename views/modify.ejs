<section>
  <h2>Modify: <%= filename %></h2>
  <% if (message) { %><p class="info"><%= message %></p><% } %>
  <form action="/files/modify/<%= encodeURIComponent(filename) %>" method="post">
    <label>New filename (leave empty to keep): <input name="newName" placeholder="newname.txt" /></label>
    <label>Content:
      <textarea name="newContent" rows="8" cols="80"><%= content %></textarea>
    </label>
    <button type="submit">Save Changes</button>
  </form>
  <a href="/files/dashboard">Back</a>
</section>
